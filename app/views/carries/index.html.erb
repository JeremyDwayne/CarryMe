<h1>Carries</h1>

<div class="list-group">
  <% @carries.each do |carry| %>
    <% main = carry.user.main_character %>

    <div href="#" class="list-group-item list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= carry.title %></h5>
        <small>Leader Raider.IO: <%= main.raider_io %>
        &nbsp;
        Type: <%= carry.carry_type.capitalize %></small>
      </div>
      <p class="mb-1"><%= carry.description %></p>

      <small>Starting Price: <%= wowGoldConverter(carry.price) %></small>

      <div class="float-right">
        <% if user_signed_in? && owned?(carry) %>
          <%= link_to 'Edit', edit_carry_path(carry) %>
          <%= link_to 'Delete', carry, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <a data-toggle="modal" data-target="#whisperModal-<%= carry.id %>" href="#">Whisper</a>
      </div>
    </div>

    <div class="modal fade" id="whisperModal-<%= carry.id %>" tabindex="-1" role="dialog" aria-labelledby="whisperModalLabel-<%= carry.id %>" aria-hidden="true">
      <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <pre id="whisper-text-<%= carry.id %>">/w <%= main.name.downcase %>-<%= main.realm.downcase %> Hi, I'm interested in your carry: "<%= carry.title %>" starting at: <%= wowGoldConverter(carry.price) %></pre>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
