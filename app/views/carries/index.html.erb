<p id="notice"><%= notice %></p>

<h1>Carries</h1>
<%= current_user.battletag %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carries.each do |carry| %>
      <tr>
        <td><%= carry.title %></td>
        <td><%= carry.description %></td>
        <td><%= carry.carry_type %></td>
        <td><%= carry.price %></td>
        <td><%= carry.user.battletag %></td>
        <td><%= link_to 'Show', carry %></td>
        <td><%= link_to 'Edit', edit_carry_path(carry) %></td>
        <td><%= link_to 'Destroy', carry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carry', new_carry_path %>
